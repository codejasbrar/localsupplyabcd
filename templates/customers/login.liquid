{% capture required %}{{ 'customer.general.required_fields' | t }}{% endcapture %}
<div class="container-indent">
  <div class="container">
    <!--h1 class="tt-title-subpages noborder">{{ 'customer.login.title' | t }}</h1-->
    <div class="tt-login-form">
      <div class="row pb-5">
        <div class="col-xs-12 col-md-12">
          <div class="tt-item mx-auto text-center border-0 p-0" style="max-width: 400px;">
            
            <div id="login">
              <h2 class="tt-title">{{ 'customer.login.title_login' | t }}</h2>
              <!-- {{ 'customer.login.description' | t }} -->

              <div class="form-default form-top">
                {% form 'customer_login' %}

                <div class="tt-base-color">
                {{ form.errors | default_errors }}
                </div>

                <div class="form-group local_group">
                  <!--label for="loginInputName">{{ 'customer.login.email' | t }} {% if required != "" %}<sup>*</sup>{% endif %}</label-->
                  {% if required != "" %}<!--div class="tt-required">{{ required }}</div-->{% endif %}
                  <label class="local_email">EMAIL<span>:</span></label>
                  <input type="email" name="customer[email]" class="form-control local_sup_mail" id="loginInputName" placeholder="Email">
                </div>
                {% if form.password_needed %}
                <div class="form-group local_group">
                  <label class="local_email">PASSWORD<span>:</span></label>

                  <!--label for="loginInputEmail">{{ 'customer.login.password' | t }} {% if required != "" %}<sup>*</sup>{% endif %}</label-->
                  <input type="password" value="" name="customer[password]" class="form-control local_sup_mail" id="loginInputEmail" placeholder="Password">
                </div>
                {% endif %}
                <div class="d-block text-center text-black">
                  <a href="#" onclick="showRecoverPasswordForm();return false;">Forgot your password?</a>
                  <a href="/account/register"> | Sign up</a>
                </div>
                <div class="row mt-3">
                  <div class="col-12">
                    <div class="form-group">
                      <button class="btn btn-border w-100" type="submit" style="border-radius: 30px;">Sign In</button>
                    </div>
                  </div>
                  {% if form.password_needed %}
                  <!--div class="col-auto align-self-end">
                    <div class="form-group">
                      <ul class="additional-links">
                        <li></li>
                      </ul>
                    </div>
                  </div-->
                  {% endif %}
                </div>
                <div class="d-block text-center text-black">
                  <a href="/">Return to Store</a>
                </div>

                {% endform %}
              </div>
            </div>

            <div id="recover-password" style="display:none;" class="wrap text-center">
              <h2 class="tt-title">{{ 'customer.login.reset_password' | t }}</h2>
              <!-- {{ 'customer.login.reset_password_subtext' | t }} -->

              <div class="form-default form-top">
                {% form 'recover_customer_password' %}

                <div class="tt-base-color">
                {{ form.errors | default_errors }}
                </div>

                <div class="form-group">
                  <!--label for="loginInputName">{{ 'customer.login.email' | t }} {% if required != "" %}<sup>*</sup>{% endif %}</label>
                  {% if required != "" %}<div class="tt-required">{{ required }}</div>{% endif %}-->
                  <input value="" name="email" class="form-control " id="loginInputName" placeholder="{{ 'customer.login.email_field' | t }}" autocorrect="off" autocapitalize="off">
                </div>
                
                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <button class="btn btn-border w-100" type="submit" style="border-radius: 30px;">{{ 'customer.login.submit_recover' | t }}</button>
                    </div>
                  </div>
                  <div class="col-12 align-self-center">
                    <div class="form-group">
                      <ul class="additional-links">
                        <li>&nbsp;{{ 'customer.general.or' | t }} <a href="#" onclick="hideRecoverPasswordForm();return false;">{{ 'customer.login.cancel' | t }}</a></li>
                      </ul>
                    </div>
                  </div>
                </div>
                {% endform %}
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.local_group {
    display: flex;
    align-items: center;
}
  .local_sup_mail{
  background-color: transparent !important;
    border-bottom: 1px solid #191919 !important;
  }
  .local_email{
  font-size: 15px !important;
    font-weight: 700 !important;
  }
  .local_email span{
  padding: 0px 5px;
  
  }
  
  .form-default .form-control:not(textarea) {
    height: 20px;
}
  
  .form-default .form-control {
       border: 0px solid #f7f8fa;
    padding: 5px;
    padding-bottom: 5px !important;   
}
</style>

<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'block';
    document.getElementById('login').style.display='none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('login').style.display = 'block';
  }

  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>
<style>
  .text-black {
    color: #000;
  }
</style>