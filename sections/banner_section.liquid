        },
        {
          "type": "textarea",
          "id": "image_content_2",
          "label": "Image Content 2"
        },
        {
          "type": "header",
          "content": "Right Image"
        },
        {
          "type": "image_picker",
          "id": "right_image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "right_image_mobile",
          "label": "Mobile image"
        },
        {
          "type": "url",
