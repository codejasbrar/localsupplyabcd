<div class="container">
  <div class="v10-review-wrapper clearfix" {{block.shopify_attributes}}>
    
    <div id="shopify-section-1593508407471" class="content">
      <div class="reviewwrapper">
      	{%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
        	<div class="review pt-5">
              <h2 class="tt-title text-center" style="font-weight: 500;">{{ b_i.quotelogo }}</h2>
              {% if b_i.image %}
              <div class="tt-carousel-brands mt-4 text-center logo {% if forloop.first == true %}active{% endif %}" data-index="{{ forloop.index0 }}">
                <a href="{{ b_i.link }}">
                  <img src="{{ b_i.image | img_url: 'large' }}"/>
                </a>
              </div>
              {% endif %}
        	</div>
        {%- endfor -%}
      </div>
      
    </div>
    
  </div>
</div>
