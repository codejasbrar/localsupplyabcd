{%- if infobar != '' and infobar.settings.show_content -%}
{%- assign show_content = true -%}
{%- if infobar.settings.show_content_index -%}{%- unless template contains 'index' -%}
{%- assign show_content = false -%}
{%- endunless -%}{%- endif -%}
{%- if show_content == true -%}
<!-- tt-top-panel -->
<div class="tt-top-panel"{% if infobar.settings.background_image %} style="background: url({{ infobar.settings.image | img_url: 'x150' }}) {{ settings.color_inf_bar_bg }} no-repeat center;"{% endif %}>
  <div class="container">
    <div class="tt-row" style="padding-top:{{ infobar.settings.toppadding }}px;min-height:{{ infobar.settings.minimalheight }}px;">
      <div class="tt-description" id="descdesk" style="font-size:{{ infobar.settings.fontsize }}px;line-height:{{ infobar.settings.fontsize | plus: 7 }}px;font-weight:{{ infobar.settings.fontweight }};">
        {{ infobar.settings.text }}
      </div>
      
       <div class="tt-description" id="descmob" style="font-size:{{ infobar.settings.fontsize }}px;line-height:{{ infobar.settings.fontsize | plus: 7 }}px;font-weight:{{ infobar.settings.fontweight }};">
        {{ infobar.settings.text_mobile }}
      </div>
      
      {% if infobar.settings.show_button_close %}
    <!--- <button class="tt-btn-close" style="top:{{ infobar.settings.btnpos }}px;"></button>--->
   <button class="tt-btn-open" id="OpenAcc"><i class="icon-e-13"></i></button>
      
      <button class="tt-btn-open" id="CloseAcc" style="display:none;"><i class="icon-e-16"></i></button>
		      
      {% endif %}
    </div>
  </div>
</div>


<div class="topAccordian">
	
  <div class="col-6 floLEft">
  	
 	<div class="headerOwnCollection headerpro_text">
    	<h3 class="pro-1">{{ settings.promo_text_one }} </h3>
		<h3 class="pro-2">{{ settings.promo_text_two }}</h3>
    {% comment %} {%- include 'header_collection_slider' -%} {% endcomment %}  
      
    </div>
    
  </div>
  
  <div class="col-6 floLEft">
  	
     <div class="headerCoupon">
		<div class="codeCoupon">
      {% if settings.promo_code_g != blank and settings.promo_code_label != blank %}
			<p class="blue"><span>{{ settings.promo_code_label }}</span></p>
			<h2><span>{{ settings.promo_code_g }}</span></h2>
      {% endif %}
		</div>
	 
	 </div>
  
  </div>

</div>

<style>
  	
  .floLEft {
    float: left;
}
  
  .topAccordian {
    float: left;
    width: 100%;
}
  
  button.tt-btn-open {
    background: transparent;
    border: none;
}
  
  button.tt-btn-open i {
    color: #fff;
    font-size: 25px;
    font-weight: 600;
    position: relative;
    top: 0x;
}
  
  
  .topAccordian {
    display: none;
}
  

  button.tt-btn-close {
    display: block;
}
  
  
    button#CloseAcc {
    display: none;
}
  
.headerCoupon {
    text-align: right;
    padding-top: 0px;
}
  
  .headerCoupon h3 {
    color: #000;
    font-size: 17px !important;
    padding-bottom: 0px !important;
}
  
  .codeCoupon h2 {
    color: #05277D;
    font-size: 26px !important;
    font-weight: 800 !important;
}
  
.topAccordian {
    border: solid 2px #191919;
    background: #191919;
}
  
  .glide__bullet--active {
    background-color: #04247f;
    border-color: #04247f;
}
  
  
  div#descdesk {
    display: block;
}
  
    div#descmob {
    display: none;
}

  .topAccordian {
    padding-bottom: 10px;
}
  
  .headerCoupon h3 {
    font-weight: 700 !important;
    line-height: 1.3 !important;
    font-size: 20px !important;
}
.topAccordian .headerpro_text h3 {
    color: #fff;
    font-weight: bold!important;
    padding-bottom: 0px!important;
}
.codeCoupon p.blue {
    font-size: 30px;
    font-weight: bold;
    text-transform: uppercase;
    color: #fff!important;
    margin-top: 0px;
}
.codeCoupon h2 span {
    background: #61d836;
    font-size: 30px;
}
.codeCoupon h2 {
    padding-bottom: 0px!important;
}
  
  
@media only screen and (max-width: 767px) {
  button#OpenAcc {
    display: block;
}
  
  button.tt-btn-close {
    display: none;
}
  
    button.tt-btn-open i {
    color: #fff;
    font-size: 25px;
    font-weight: 600;
    position: relative;
    top: 0px;
}
  
  #intro6 .grid.ligp h2 a {
    font-size: 16px !important;
    line-height: 0px;
}
  
  
  #intro6 ul.glide__slides .glide__slide {
    padding: 0px 12px;
}
  .topAccordian {
    border: solid 2px #04247f;
    padding-bottom: 22px;
}
  
  
  div#descdesk {
    display: none;
}
  
  div#descmob {
    display: block;
}

  
}
  
</style>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
  $("#CloseAcc").click(function(){
    $(".topAccordian").hide();
    
      $("#CloseAcc").hide();
     $("#OpenAcc").show();
    
  });
  $("#OpenAcc").click(function(){
    $(".topAccordian").show();
    
       $("#CloseAcc").show();
     $("#OpenAcc").hide();
    
  });
});
</script>


{%- endif -%}
{%- endif -%}
