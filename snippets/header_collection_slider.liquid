{% if collections.topcollection.products.size > 0 %}
<div class="tt-product-listing row" data-onerow="true">
<div id="v10-product-guarantee" style="padding:0px;padding-top:10px; margin:0px;">
  <div class="container">
    <div class="glide" id="intro6">
  		<div data-glide-el="track" class="glide__track">

    		<ul class="glide__slides">
              	
              	
              
             {% for product in collections.topcollection.products %}

		 
		
			<li class="glide__slide">
              		<a href="#">

					<div class="grid ligp">
                      <img src="{{ product.featured_image | product_img_url: 'medium' }}" alt=""/>
					  
					  <div class="star_icons">
						
						  <div class="tt-rating" data-url="{{ product.url | within: collection }}">
							
							{% render 'okendo-reviews-product-rating-summary', product: product %}
						
						  </div>
						 
					  </div>
					  
                     <h2 class="tt-title prod-thumb-hidden-title-color">
						<a href="{{ product.url | within: collection }}">
						  {%- if settings.truncate_product_title -%}
						  {{ product.title | strip_html | truncatewords: settings.truncate_product_title_w, settings.truncate_product_title_s }}
						  {%- else -%}
						  {{ product.title }}
						  {%- endif -%}
						</a>
					  </h2>
					  
				
					  <!---<div class="tt-price"><span>{{ product.price | money }}</span><span class="currency-code">{{ cart.currency.iso_code }}</span></div>---->
					 
					   
						
						
                    </div>
					
					</a>
            </li>

		{% endfor %}
      			
              	
    		</ul>
  		</div>
		
		<div style="clear:both;"></div>
      	
			<div class="glide__bullets" data-glide-el="controls[nav]">
			
			{% for product in collections.topcollection.products %}
			 
				<button class="glide__bullet" data-glide-dir="={{ forloop.index }}"></button>
			
			{% endfor %}
			
		  </div>
	</div>
  </div>
</div>
</div>
{% endif %}


<script>
var glide = new Glide('#intro6', {
  type: 'carousel',
  scrollLock: true,
  perView: 2,
  breakpoints: {
    800: {
      perView: 1
    },
    480: {
      perView: 1
    }
  }
})

glide.mount()




</script>
	

