{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/localsupplystore.myshopify.com/products/configure/105151/edit
{% endcomment %}
{% if product.metafields.custom_fields["product_features_colelction"] != blank %}
  <div class="custom-field custom-field__product-features-colelction custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Features</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign icon_array = product.metafields.custom_fields["icon"] | split: separator %}
      {% assign label_array = product.metafields.custom_fields["label"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["product_features_colelction"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__icon">
            {{ icon_array[index] }}
          </div>
          <div class="fc-field field__label">
            {{ label_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}