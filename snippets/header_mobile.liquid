<!-- tt-mobile-header -->
<div class="tt-mobile-header" id="header_mobile">
 {% comment %}  
 
 <div class="container-fluid">
    <div class="tt-header-row">
      <div class="tt-mobile-parent-menu">
        <div class="tt-menu-toggle mainmenumob-js">
          {% include "svg-mobile-menu" %}
          
        </div>
      </div>
	  
	  
      <!-- search -->
      <div class="tt-mobile-parent-search tt-parent-box"></div>
      <!-- /search -->
      {%- unless settings.catalogue_mode -%}
      {%- if template != "cart" -%}
      <!-- cart -->
      <div class="tt-mobile-parent-cart tt-parent-box"></div>
      <!-- /cart -->
      {%- endif -%}
      {%- endunless -%}
      {%- if item.show_customer_links -%}
      <!-- account -->
      <div class="tt-mobile-parent-account tt-parent-box"></div>
      <!-- /account -->
      {%- endif -%}
      {%- if item.show_options_links -%}
      <!-- currency -->
      <div class="tt-mobile-parent-multi tt-parent-box"></div>
      <!-- /currency -->
      {%- endif -%}
    </div>
  </div>
  {% endcomment %}
  <div class="container-fluid tt-top-line">
    <div class="row">
      <div class="tt-logo-container">
        <div class="tt-mobile-parent-menu">
          {% comment %}
          <div class="tt-menu-toggle mainmenumob-js">
            {% include "svg-mobile-menu" %}
          </div>
          {% endcomment %}
          <div class="local-supply-mobile-menu-toggle">
            <i class="fa fa-bars"></i>
            <i class="fa fa-times" style="display: none"></i>
          </div>
        </div>
        <a class="tt-logo tt-logo-alignment mobile-logo-local" href="/">
          {% comment %}
          {%- if headerlogomobile contains "title_" -%}
          <h2>{{ headerlogomobile | split:"title_" | last }}</h2>
          {%- else -%}
          <img src="{{ headerlogomobile }}" srcset="{{ headerlogomobile }} 1x, {{ headerlogomobileretina }} 2x" alt="{{ headerlogomobilealt }}" class="tt-retina">
          {%- endif -%}
          {% endcomment %}
<!--           <h2>LOCAL SUPPLY</h2> -->
          <img src="{{ headerlogo }}"
                   srcset="{{ headerlogo }} 1x, {{ headerlogoretina }} 2x"
                   alt="{{ headerlogoalt }}"
                   class="tt-retina" itemprop="logo" style="top:{{ item.logo_margin_top }}px"/>
         
        </a>
        {%- unless settings.catalogue_mode -%}
        {%- if template != "cart" -%}
        <!-- cart -->
        <div class="tt-mobile-parent-search tt-parent-box"></div>
        <div class="tt-mobile-parent-cart tt-parent-box"></div>
        <!-- /cart -->
        {%- endif -%}
        {%- endunless -%}
      </div>
    </div>
    <div class="row local-supply-mobile-menu-row local-hide">
      <ul class="local-supply-mobile-menu-list">
        {% for link in linklists[section.settings.mobile_menu].links %}
        <li>
          <a href="{{ link.url }}"{% if link.links != blank %}class="local-has-submenu" data-submenu="{{ link.handle }}{{ forloop.index }}"{% endif %}>{{ link.title }}</a>
          {% if link.links != blank %}
          <ul class="local-supply-mobile-submenu-list local-hide" id="{{ link.handle }}{{ forloop.index }}">
            {% for child in link.links %}
            <li>
              <a href="{{ child.url }}">
                {{ child.title }}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
        <li>
          <a href="#" onclick="clicksearchbtn()">Search</a>
        </li>
      </ul>
    </div>
  </div>
  
