</div>

<style>
@media only screen and (max-width: 767px) {
  
header .tt-logo-alignment {
    position: relative;
    text-align: left;
}
.tt-cart.tt-dropdown-obj span {
    display: block;
    text-transform: uppercase;
    font-weight: 600;
}
	.tt-cart.tt-dropdown-obj .icon-f-46 {
		display: none;
	}

header .tt-logo {
    position: relative;
    display: -ms-inline-flexbox;
    display: -webkit-inline-flex;
    display: block;
    width: 33%;
}

.tt-mobile-parent-menu {
    width: 33%;
    text-align: center;
}

.tt-mobile-header .tt-parent-box {
    margin-left: 0px;
    width: 33%;
    text-align: center;
}
  
  .tt-mobile-header .tt-parent-box {

    justify-content: center;
}

.tt-mobile-header .tt-logo-container {
    padding: 5px 0 5px;
}
  
  
  a.tt-logo.tt-logo-alignment img {
    height: 23px;
}

div#header_mobile_pro_data {
    display: none;
}
  
.tt-menu-toggle svg {
    fill: #191919;
    width: 25px;
    height: 25px;
}
  
header .tt-dropdown-obj .tt-dropdown-toggle {
 
    font-size: 22px;
}
  
  
}
  
</style>
<script>
  $(document).ready(function() {
    $('.local-supply-mobile-menu-toggle i').click(function() {
      $('.local-supply-mobile-menu-toggle i').toggle();
      $('.local-supply-mobile-menu-row').slideToggle();
    });
    $('.local-has-submenu').click(function(e) {
      e.preventDefault();
      $('#' + $(this).attr('data-submenu')).slideToggle();
    });
  });
</script>